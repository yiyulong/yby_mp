/* pages/contactsUpdate/index.wxss */

page {
  /* min-height: 100%; */
  background-color: #f6f6f6;
  overflow: hidden;
}

.contents {
  width: 100%;
  padding: 0 0 100rpx;
  overflow: hidden;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
}

.row {
  background-color: #fff;
  /* margin: 10rpx 0; */
  padding: 0 30rpx;
  border-bottom: 1px solid #f6f6f6;
}

.row .inp {
  height: 100rpx;
}

.row .txa {
  padding: 30rpx 0;
}

.row .picker {
  display: inline-block;
  padding: 30rpx 0;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow {
  float: right;
  margin-top: 30rpx;
}

/*  */

.butt {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.butt button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #333;
  margin-top: 10rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
}
