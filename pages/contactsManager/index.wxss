page {
  min-height: 100%;
  background-color: #f6f6f6;
  /* overflow: hidden; */
  box-sizing: border-box;
}

.contents {
  box-sizing: border-box;
  margin-bottom: 100rpx;
}

.contents .row {
  margin: 30rpx 0;
  box-sizing: border-box;
}

.line {
  height: 1px;
  background-color: #fff;
  border-bottom: 1px dashed #999;
}

/*  */

.butt {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.butt button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #333;
  margin-top: 10rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
}
