page {
  /* padding-bottom: constant(safe-area-inset-bottom); */
  /* padding-bottom: env(safe-area-inset-bottom); */
  height: 100%;
  position: relative;
}

.index-page {
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
}

.index-tab {
  height: 100rpx;
  background: #fff;
}
.my-tabs {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  height: 100rpx;
  background: #fff;
}
.my-tabs-item {
  flex: 1;
  color: #000;
  font-size: 32rpx;
  line-height: 100rpx;
  text-align: center;
}
.my-tabs-item.active {
  background: #000;
  color: #fff;
}

.index-content {
  /* position: absolute;
  top: 100rpx;
  left: 0;
  bottom: 0;
  width: 100%; */
  flex: 1;
  overflow: hidden;
}
.index-content > swiper, .index-content > swiper > swiper-item, .index-content scroll-view {
  height: 100%;
}

/** home-box **/
.home-box [class$="container"] {
  margin-bottom: 40rpx;
}

/* 轮播图 */
.swiper-container {
  /* margin-top: 16rpx; */
}
.home-box > .swiper-container {
  position: relative;
  padding-bottom: 125%;
  overflow: hidden;
}
.carousel-swiper {
  height: 950rpx;
}
.home-box > .swiper-container .carousel-swiper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.carousel-image {
  width: 100%;
  height: 100%;
}
/* 通用样式 */
.title-content {
  padding: 40rpx 0;
}
.main-content {
  overflow: hidden;
}

/* 时装系列 */
.fashion-row {
  display: flex;
  flex-flow: row wrap;
  align-items: stretch;
  margin-left: -5px;
  margin-right: -5px;
}
.fashion-col {
  flex: 0 0 50%;
  padding-left: 5px;
  padding-right: 5px;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.fashion-container {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.fashion-container .main-content {
  margin-bottom: -20rpx;
}
.fashion-item {
  height: 100%;
  background: #f4f4f4;
}
/* .fashion-item .img-content {
  padding-top: 130%;
