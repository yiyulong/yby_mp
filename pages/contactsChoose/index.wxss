/* pages/contactsChoose/index.wxss */

page {
  min-height: 100%;
  background-color: #f6f6f6;
  overflow: hidden;
  font-size: 28rpx;
}

.contents {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.list {
  box-shadow: 0rpx 4rpx 6rpx 7rpx rgba(243, 243, 243, 0.5);
}

/*  */

.butt {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.butt button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  background-color: #333;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
}
