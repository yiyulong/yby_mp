<!--pages/searchPage/index.wxml-->
<view class="searchPage">
   <zan-search
        placeholder="搜索..."
        keyword="{{ inputValue }}"
        placeholder="搜索您想要的商品"
        searchStyle="height: 70rpx;border-radius: 50rpx;background: {{ searchbg || '#F2F2F2' }};"
        inputStyle="height: 30rpx; background: {{ searchbg || '#F2F2F2' }};"
        bindchange="searchChange"
        bindsearch="searchDone"
      />
</view>
