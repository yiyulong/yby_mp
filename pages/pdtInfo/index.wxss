/* pages/pdtInfo/index.wxss */
page {
  overflow-x: hidden;
}
.pdtInfo-page {
  width: 100%;
  box-sizing: border-box;
  position: relative;
  padding: 0 15px 70px;
}

.carousel-swiper {
  height: 760rpx;
  margin-right: -4px;
}

swiper-item {
  box-sizing: border-box;
  padding-right: 4px;
}

.carousel-image {
  width: 100%;
  height: 100%;
}

.pdtInfo-body {
  margin-top: 15px;
  width: 100%;
  text-align: center;
}

.productName {
  width: 100%;
  font-weight: bold;
  font-size: 18px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.styleName {
  width: 100%;
  font-size: 12px;
  /* color: #999; */
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-weight: bold;
}

.pdtAttrList {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  padding: 10rpx;
  height: 30px;
  line-height: 30px;
}

.pdtAttr {
  font-size: 10px;
  border: 1px solid #e0e0e0;
  padding: 2px 8px;
  box-sizing: border-box;
  border-radius: 15px;
  margin: 0 5px;
  color: #999;
}

.pricelist {
  color: #999;
  text-decoration: line-through;
}

.price {
  margin-left: 8px;
  /* color: #f44; */
}
.pdtInfo-btn {
  width: 100%;
  height: 70px;
  line-height: 50px;
  text-align: center;
  /* background-color: #000000; */
  color: #ffffff;
  font-size: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  padding: 0 15px;
  box-sizing: border-box;
}
.pdtInfo-btn .van-button {
  display: block;
  background: #de404c;
  color: #fff;
  height: 50px;
  line-height: 50px;
}
