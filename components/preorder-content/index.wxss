.pre-item {
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 8px;
  background: #fff;
  color: #333;
  display: flex;
  flex-flow: row nowrap;
  align-items: stertch;
}
.pre-item.isRead {
  background: #f1f1f1;
  color: #666;
}
.hover {
  background: rgba(200, 200, 200, .8);
}

.img-cn {
  width: 100px;
  height: 100px;
}
.img-cn image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.info-cn {
  font-size: 14px;
  padding: 0 10rpx;
  flex: 1;
}
.info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  height: 50%;
}