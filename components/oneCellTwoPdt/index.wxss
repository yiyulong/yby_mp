/* components/oneCellTwoPdt/index.wxss */
.my-row-class {
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;
  /* margin-right: -8px; */
}
.two-pdt-item {
  padding-bottom: 100%;
  position: relative;
  /* margin-top: 5px; */
  margin-bottom: 10px;
}

.two-pdt-item > .box {
  position: absolute;
  width: 100%;
  height: 100%;
  /* background-color: blue; */
  box-sizing: border-box;
  /* padding: 0 5px; */
  padding-right: 8px;
}

.two-pdt-item > .box > .content {
  position: relative;
  width: 100%;
  height: 80%;
  /* border: 1px solid #e0e0e0; */
  box-sizing: border-box;
  /* padding: 5px; */
  background-color: #fff;
}

.two-pdt-item > .box > .content > image {
  width: 100%;
  height: 100%;
}

.two-pdt-item > .box > .info {
  position: relative;
  width: 100%;
  height: 20%;
  /* background-color: red; */
}

.two-pdt-item > .box > .info > .prodCode {
  margin-top: 2px;
  text-align: center;
  color: #999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.two-pdt-item > .box > .info > .prodName {
  margin-top: 2px;
  text-align: center;
  color: #333;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.two-pdt-item > .box > .info > .prodPrice {
  margin-top: 2px;
  text-align: center;
  font-size: 12px;
}

.two-pdt-item > .box > .info > .prodPrice > .priceStandard {
  color: #999;
  margin-right: 5px;
  text-decoration: line-through;
}

.two-pdt-item > .box > .info > .prodPrice > .priceDiscount {
  /* color: #f44; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  width: 100%;
}
