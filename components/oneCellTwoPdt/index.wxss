/* components/oneCellTwoPdt/index.wxss */
.my-row-class {
  overflow-x: hidden;
}
.two-pdt-item {
  margin-bottom: 20rpx;
}
.two-pdt-item > .box > .content {
  position: relative;
  width: 100%;
  padding-bottom: 130%;
  background-color: #fff;
}

.two-pdt-item > .box > .content > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.two-pdt-item > .box > .info {
  position: relative;
  width: 100%;
  height: 20%;
}

.two-pdt-item > .box > .info > .prodCode {
  margin-top: 2px;
  text-align: center;
  color: #999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.two-pdt-item > .box > .info > .prodName {
  margin-top: 2px;
  text-align: center;
  color: #333;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.two-pdt-item > .box > .info > .prodPrice {
  margin-top: 2px;
  text-align: center;
  font-size: 12px;
}

.two-pdt-item > .box > .info > .prodPrice > .priceStandard {
  color: #999;
  margin-right: 5px;
  text-decoration: line-through;
}

.two-pdt-item > .box > .info > .prodPrice > .priceDiscount {
  /* color: #f44; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  width: 100%;
}
