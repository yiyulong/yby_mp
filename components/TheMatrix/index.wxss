}
.my-tab-active {
  background:#000;
  color:#fff!important;
}
.cell-right-class {
  white-space: nowrap;
}

.btn-container {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  padding: 4px 0;
}

.order-matrix-price-container {
  width: 100%;
  height: 50px;
  padding: 0 10px;
  box-sizing: border-box;
  margin-bottom: 5px;
}

.order-matrix-label {
  color: #999;
  font-size: 12px;
}

.order-matrix-value {
  color: #f44;
  font-size: 12px;
  font-weight: bold;
}

.order-matrix-value__price {
  font-size: 14px !important;
}

.order-matrix-btn {
  display: inline-block;
  width: 50%;
  height: 50px;
  line-height: 50px;
}

.order-matrix-btn-cart-container {
  width: 99%;
  height: 50px;
  border-top: 1px solid #e0e0e0;
  text-align: center;
  line-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-matrix-order-btn {
  width: 30%;
  height: 30px;
  border: 1px solid #e0e0e0;
  line-height: 30px;
  color: #999;
  border-radius: 5px;
  font-size: 14px;
}

.order-reason {
  /* width: 18rem;
  height: auto;
  background-color: #fff;
  font-size: 22rpx;
  z-index: 1000; */
  padding: 20rpx 30rpx;
  font-size: 14px;
}
.order-reason .radio-custom-class {
  margin-bottom: 30rpx;
  align-items: flex-start;
}
.order-reason .radio-label-class {
  flex: 1;
}
.order-reason textarea {
  width: 100%;
  height: 100px;
  margin-top: 20rpx;
  border: 1px solid #eee;
  padding: 10rpx 20rpx;
  width: 100%;
  border-radius: 4px;
  box-sizing: border-box;
}

