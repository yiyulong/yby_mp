/* components/filterItem/index.wxss */

.filter-title {
  padding-left: 5px;
  font-size: 14px;
  font-weight: bold;
  margin-top: 10px;
}

.filter-item {
  display: inline-block;
  padding: 8px;
  box-sizing: border-box;
}

.filter-item > .box > .three-filter-item__title {
  padding: 0 8px;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.three-filter-item {
  display: inline-block;
  /* position: relative; */
  margin-top: 10px;
  height: 30px;
}

.three-filter-item > .box {
  position: absolute;
  width: 100%;
  /* background-color: blue; */
  box-sizing: border-box;
  padding: 0 5px;
}

.three-filter-item__title {
  position: relative;
  width: 100%;
  background: #f1f1f1;
  text-align: center;
  font-size: 14px;
  height: 30px;
  line-height: 30px;
  color: #999;
  border: 1px solid #f1f1f1;
}

.three-filter-item__title-selected {
  border: 1px solid #f44;
  background: #fff;
  color: #f44;
}

.filter-button {
  width: 100%;
  text-align: center;
}

.filter-button-btn {
  width: 50%;
  height: 40px;
  line-height: 40px;
  color: #999;
  font-size: 14px;
  display: inline-block;
}
