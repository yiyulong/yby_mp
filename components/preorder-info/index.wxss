.preorder-info {
  position: relative;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
}
.bg .image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

