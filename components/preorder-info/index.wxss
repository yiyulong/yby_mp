.cn {
  position: relative;
  background: rgba(255, 255, 255,0.6);
  backdrop-filter: blur(10px);
  min-height: 320px;
  max-height: 80vh;
  overflow-y: auto;
  z-index: 1;
}
.cn .color-box {
  padding: 20rpx;
}
.cn .color-box .colorName {
  padding: 0 30rpx;
  background: linear-gradient(to right, transparent, transparent 10rpx, black 10rpx, black 20rpx, transparent 20rpx, transparent) no-repeat;
  background-size: auto 60%;
  background-position: 0 center;
}
.cn .color-box .colorContent {
  max-height: 400px;
  padding: 0 40rpx;
}
.cn .color-box .colorItem {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx;
  font-size: 14px;
  color: #333;
}
.cn .cn-loading {
  height: 200px;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  color: #666;
}