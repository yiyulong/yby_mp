/* components/pdt/index.wxss */

.pdt > .content {
  position: relative;
  padding-top: 130%;
}

.pdt > .content > image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.pdt > .info {
  margin-bottom: 8px;
}

.pdt > .info > .prodCode {
  margin-top: 2px;
  text-align: center;
  color: #999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pdt > .info > .prodName {
  margin-top: 2px;
  text-align: center;
  color: #333;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pdt > .info > .prodPrice {
  margin-top: 2px;
  text-align: center;
  font-size: 12px;
}

.pdt > .info > .prodPrice > .priceStandard {
  color: #999;
  margin-right: 5px;
  text-decoration: line-through;
}

.pdt > .info > .prodPrice > .priceDiscount {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  width: 100%;
}
